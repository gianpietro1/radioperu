.album-info
  - if @album
    .pull-left
      #album-cover
        - unless @album.cover.file == nil
          = link_to image_tag( @album.cover.thumb ), "/#{I18n.locale.to_s}/" + @artist.slug + '/albums/' + @album.slug, target: "_blank"
        - else
          = link_to image_tag( 'default_album_thumb.jpg' ), "/#{I18n.locale.to_s}/" + @artist.slug + '/albums/' + @album.slug, target: "_blank"
    .album-summary
      .margin-bottom-00
        %em
          = t(:album)
      #album-name.margin-top-00.margin-left-01
        = @album.name
      #album-year.margin-left-01
        = @album.year
  - else
    .pull-left
      #album-cover
        = image_tag( 'default_album_thumb.jpg' )
    .album-summary
      .margin-bottom-00
        %em
          = t(:album)
      #album-name.margin-top-00.margin-left-01
        = t(:album_notfound)

