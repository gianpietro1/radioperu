.landing
  %p

  .row
    .col-md-12
      %h1.text-center.logo
        radioperu.pe

  .row
    .col-md-1
    .col-md-10
      .slogan
        = t :discover
      .search
        = text_field_tag :search, params[:search], placeholder: "#{t :search_text}", size: 50
        = submit_tag t :search, :name => nil
    .col-md-1

  .row.margin-top-15
    .col-md-1
    .col-md-10
      .radios
        = link_to '', radio_path(id: 1), class: "estacion1"
        = link_to '', radio_path(id: 2), class: "estacion2"
        = link_to '', radio_path(id: 3), class: "estacion3"
        = link_to '', radio_path(id: 4), class: "estacion4"
        = link_to '', radio_path(id: 5), class: "estacion5"
    .col-md-1

  .row.margin-top-10
    .col-md-2
    .col-md-4
      %a.catalogue{ href: '#', data_description: 'catálogo musical' }
        %h3
          = t :catalogue
    .col-md-2
      %a.listener{ href: new_user_registration_path, data_description: 'regístrate como oyente' }
        %h5
          = t :register_as_listener
    .col-md-2
      %a.musician{ href: '#', data_description: 'regístrate como músico' }
        %h5
          = t :register_as_musician
    .col-md-2

