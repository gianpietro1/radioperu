.row
  %ul.radionav
    - (1..@radios.count).each do |i|
      %li
        - if @radio.id == i
          =link_to @radios.find_by(id:i).name, radio_path(id: i), class: 'highlighted'
        - else
          =link_to @radios.find_by(id:i).name, radio_path(id: i)

.row
  .col-md-1
  .col-md-10
    .radio_container
      .station_title
        %h2
          = @radio.name.titleize + ' - ' + @radio.description.camelize
      .station_player
        %script{:type=>"text/javascript", :src=>@radio.player}
        #songtitle
  .col-md-1    

%script{:type=>"text/javascript", :src=>"//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"}
= javascript_include_tag 'jquery.shoutcast.min.js'
%script{:type=>"text/javascript"}
  $.SHOUTcast({host : 'eclipse.wavestreamer.com',port:3771}).stats(function(){$('#songtitle').text(this.get('songtitle'));});